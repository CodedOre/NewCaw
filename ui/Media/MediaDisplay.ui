<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="MediaDisplay" parent="GtkWidget">
    <property name="layout-manager">
      <object class="GtkBinLayout"/>
    </property>
    <property name="width-request">360</property>
    <property name="height-request">450</property>
    <child>
      <object class="GtkRevealer" id="media_controls">
        <property name="reveal-child">true</property>
        <property name="transition-type">crossfade</property>
        <child>
          <object class="GtkCenterBox">
            <property name="orientation">vertical</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <child type="start">
              <object class="GtkWindowHandle">
                <child>
                  <object class="GtkCenterBox">
                    <child type="start">
                      <object class="GtkButton">
                        <property name="icon-name">go-previous-symbolic</property>
                        <property name="action-name">window.close</property>
                      </object>
                    </child>
                    <child type="center">
                      <object class="AdwCarouselIndicatorDots">
                      </object>
                    </child>
                    <style>
                      <class name="osd"/>
                      <class name="toolbar"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child type="center">
              <object class="GtkCenterBox">
                <child type="start">
                  <object class="GtkButton">
                    <property name="action-name">media_display.select_previous</property>
                    <property name="icon-name">go-previous-symbolic</property>
                    <style>
                      <class name="osd"/>
                    </style>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkButton">
                    <property name="action-name">media_display.select_next</property>
                    <property name="icon-name">go-next-symbolic</property>
                    <style>
                      <class name="osd"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child type="end">
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkLabel">
                    <property name="xalign">0.0</property>
                    <property name="wrap">true</property>
                  </object>
                </child>
                <child>
                  <object class="GtkMediaControls"/>
                </child>
                <style>
                  <class name="osd"/>
                  <class name="toolbar"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <style>
      <class name="osd"/>
    </style>
  </template>
</interface>
