<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="MediaDisplay" parent="GtkWidget">
    <property name="layout-manager">
      <object class="GtkBinLayout"/>
    </property>
    <property name="width-request">360</property>
    <property name="height-request">450</property>
    <child>
      <object class="AdwCarousel" id="media_carousel">
        <signal name="page-changed" handler="changed_page"/>
      </object>
    </child>
    <child>
      <object class="GtkRevealer" id="top_toolbar">
        <binding name="reveal-child">
          <lookup name="display_controls">MediaDisplay</lookup>
        </binding>
        <property name="transition-type">crossfade</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="valign">start</property>
        <child>
          <object class="GtkWindowHandle">
            <child>
              <object class="GtkCenterBox">
                <child type="start">
                  <object class="GtkButton">
                    <property name="icon-name">go-previous-symbolic</property>
                    <property name="action-name">window.close</property>
                  </object>
                </child>
                <child type="center">
                  <object class="AdwCarouselIndicatorDots">
                    <property name="carousel">media_carousel</property>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkMenuButton">
                    <property name="icon-name">view-more-symbolic</property>
                    <property name="menu-model">media-options</property>
                  </object>
                </child>
                <style>
                  <class name="osd"/>
                  <class name="toolbar"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkRevealer" id="previous_control">
        <binding name="reveal-child">
          <lookup name="display_controls">MediaDisplay</lookup>
        </binding>
        <property name="transition-type">crossfade</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="valign">center</property>
        <property name="halign">start</property>
        <child>
          <object class="GtkButton">
            <property name="action-name">media_display.select_previous</property>
            <property name="icon-name">go-previous-symbolic</property>
            <style>
              <class name="osd"/>
            </style>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkRevealer" id="next_control">
        <binding name="reveal-child">
          <lookup name="display_controls">MediaDisplay</lookup>
        </binding>
        <property name="transition-type">crossfade</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="valign">center</property>
        <property name="halign">end</property>
        <child>
          <object class="GtkButton">
            <property name="action-name">media_display.select_next</property>
            <property name="icon-name">go-next-symbolic</property>
            <style>
              <class name="osd"/>
            </style>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkRevealer" id="bottom_toolbar">
        <binding name="reveal-child">
          <lookup name="display_bottom_bar">MediaDisplay</lookup>
        </binding>
        <property name="transition-type">crossfade</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="valign">end</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkLabel" id="description_label">
                <property name="xalign">0.0</property>
                <property name="wrap">true</property>
              </object>
            </child>
            <child>
              <object class="GtkMediaControls" id="video_controls"/>
            </child>
            <style>
              <class name="osd"/>
              <class name="toolbar"/>
            </style>
          </object>
        </child>
      </object>
    </child>
    <style>
      <class name="osd"/>
    </style>
  </template>
  <menu id="media-options">
  <section>
    <item>
      <attribute name="label" translatable="yes">Save Media</attribute>
      <attribute name="action">media_display.save_media</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">Copy Media URL</attribute>
      <attribute name="action">media_display.copy_url</attribute>
    </item>
    <item>
      <attribute name="label" translatable="yes">Open in Browser</attribute>
      <attribute name="action">media_display.open_url</attribute>
    </item>
  </section>
</menu>
</interface>
