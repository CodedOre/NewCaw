<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="DetailedPost" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="margin-start">12</property>
    <property name="margin-end">12</property>
    <property name="margin-top">12</property>
    <property name="margin-bottom">12</property>
    <property name="spacing">12</property>
    <child>
      <object class="GtkBox">
        <property name="spacing">4</property>
        <child>
          <object class="AdwAvatar" id="author_avatar">
            <property name="size">48</property>
            <property name="margin-end">8</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="valign">center</property>
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkBox">
                <property name="spacing">4</property>
                <child>
                  <object class="GtkLabel" id="author_display_label">
                    <property name="halign">start</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="heading"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="author_name_label">
                    <property name="halign">start</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="dim-label"/>
                      <class name="caption"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="post_info_label">
                <property name="halign">start</property>
                <property name="use-markup">True</property>
                <style>
                  <class name="dim-label"/>
                  <class name="caption"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="post_text_label">
        <property name="halign">start</property>
        <property name="use-markup">true</property>
        <property name="wrap">True</property>
        <style>
          <class name="body"/>
        </style>
      </object>
    </child>
  </template>
</interface>
