<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="AuthenticationBrowserPage" parent="GtkWidget">
    <property name="layout-manager">
      <object class="GtkBinLayout"/>
    </property>
    <property name="hexpand">true</property>
    <child>
      <object class="AdwStatusPage" id="page_content">
        <property name="hexpand">true</property>
        <property name="icon-name">web-browser-symbolic</property>
        <property translatable="yes" name="title">Authenticate Cawbird</property>
        <property translatable="yes" name="description">Continue the authentication in your browser.</property>
        <child>
          <object class="GtkButton" id="continue_button">
            <property name="visible">false</property>
            <property translatable="yes" name="label">Continue</property>
            <property name="halign">center</property>
            <property name="width-request">275</property>
            <signal name="clicked" handler="on_continue"/>
            <style>
              <class name="suggested-action"/>
              <class name="pill"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
