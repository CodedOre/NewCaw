{
  "app-id":           "uk.co.ibboard.Cawbird.Devel",
  "runtime":          "org.gnome.Platform",
  "runtime-version":  "master",
  "sdk":              "org.gnome.Sdk",
  "command":          "cawbird",
  "finish-args":
  [
    "--share=ipc",
    "--socket=wayland",
    "--socket=x11",
    "--talk-name=org.a11y.Bus"
  ],
  "modules":
  [
    {
      "name":         "libsass",
      "buildsystem":  "meson",
      "sources":
      [
        {
          "type":    "git",
          "url":     "https://github.com/lazka/libsass.git",
          "branch":  "meson"
        }
      ]
    },
    {
      "name":         "sassc",
      "buildsystem":  "meson",
      "sources":
      [
        {
          "type":    "git",
          "url":     "https://github.com/lazka/sassc.git",
          "branch":  "meson"
        }
      ]
    },
    {
      "name":         "libadwaita",
      "buildsystem":  "meson",
      "sources":
      [
        {
          "type":    "git",
          "url":     "https://gitlab.gnome.org/gnome/libadwaita.git",
          "branch":  "main"
        }
      ]
    },
    {
      "name":         "Cawbird",
      "buildsystem":  "meson",
      "builddir":      true
    }
  ]
}
