{
  "app-id":           "uk.co.ibboard.Cawbird.Devel",
  "runtime":          "org.gnome.Platform",
  "runtime-version":  "master",
  "sdk":              "org.gnome.Sdk",
  "command":          "cawbird",
  "finish-args":
  [
    "--share=ipc",
    "--share=network",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri"
  ],
  "cleanup" : [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules":
  [
    {
      "name":         "libsass",
      "buildsystem":  "meson",
      "sources":
      [
        {
          "type":    "git",
          "url":     "https://github.com/lazka/libsass.git",
          "branch":  "meson"
        }
      ]
    },
    {
      "name":         "sassc",
      "buildsystem":  "meson",
      "sources":
      [
        {
          "type":    "git",
          "url":     "https://github.com/lazka/sassc.git",
          "branch":  "meson"
        }
      ]
    },
    {
      "name":         "libadwaita",
      "buildsystem":  "meson",
      "sources":
      [
        {
          "type":    "git",
          "url":     "https://gitlab.gnome.org/gnome/libadwaita.git",
          "branch":  "main"
        }
      ]
    },
    {
      "name":         "Cawbird",
      "buildsystem":  "meson",
      "builddir":      true,
      "sources": [
        {
          "type":"dir",
          "path":"."
        }
      ]
    }
  ]
}
