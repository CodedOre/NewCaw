{
  "app-id":           "uk.co.ibboard.Cawbird.Devel",
  "runtime":          "org.gnome.Platform",
  "runtime-version":  "master",
  "sdk":              "org.gnome.Sdk",
  "command":          "cawbird",
  "finish-args":
  [
    "--share=ipc",
    "--share=network",
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri"
  ],
  "cleanup" : [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules":
  [
    {
      "name":        "Rest",
      "buildsystem": "meson",
      "config-opts": [
        "-Dexamples=false",
        "-Dgtk_doc=false",
        "-Dsoup2=false",
        "-Dvapi=true"
      ],
      "sources": [
        {
          "type":   "git",
          "url":    "https://gitlab.gnome.org/gnome/librest.git",
          "branch": "master"
        }
      ]
    },
    {
      "name":        "Cawbird",
      "buildsystem": "meson",
      "builddir":     true,
      "config-opts": [
        "-Dmastodon_backend=@MASTODON_BACKEND@",
        "-Dtwitter_backend=@TWITTER_BACKEND@",
        "-Dtwitter_oauth_key=@TWITTER_OAUTH_KEY@"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
