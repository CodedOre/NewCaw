<component type="desktop">
  <!-- Application ID and executable -->
  <id>uk.co.ibboard.Cawbird.desktop</id>
  <translation type="gettext">cawbird</translation>
  <launchable type="desktop-id">uk.co.ibboard.Cawbird.desktop</launchable>
  <provides>
    <binary>cawbird</binary>
  </provides>

  <!-- Licenses -->
  <project_license>GPL-3.0+</project_license>
  <metadata_license>CC0-1.0</metadata_license>

  <!-- Name and descriptions -->
  <name>Cawbird</name>
  <summary>Your window to the social world</summary>
  <description>
    <p>Cawbird is a client for the short-text social networks Twitter and Mastodon.</p>
    <p>TODO: Add the rest of the description.</p>
  </description>

  <!-- Developer -->
  <developer_name>IBBoard</developer_name>

  <!-- Links and Contacts -->
  <url type="homepage">https://ibboard.co.uk/cawbird/</url>
  <url type="bugtracker">https://github.com/ibboard/cawbird/issues</url>
  <url type="translate">https://www.transifex.com/cawbird/cawbird/</url>

  <!-- Device requirements -->
  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>

  <!-- Age Rating -->
  <content_rating type="oars-1.1">
    <content_attribute id="social-chat">moderate</content_attribute>
    <content_attribute id="social-info">mild</content_attribute>
    <content_attribute id="social-contacts">intense</content_attribute>
  </content_rating>

  <!-- Screenshots -->
  <screenshots>
  </screenshots>

  <!-- Changelog -->
  <releases>
  </releases>
</component>
