<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="cawbird">
  <!-- General settings -->
	<schema id="uk.co.ibboard.Cawbird" path="/uk/co/ibboard/Cawbird/">
    <key type="b" name="round-avatars">
      <description>
        Display user avatars round.
      </description>
      <default>true</default>
    </key>
	</schema>
  <!-- Account short list -->
  <schema id="uk.co.ibboard.Cawbird.Accounts" path="/uk/co/ibboard/Cawbird/Accounts/">
    <key type="a{sas}" name="mastodon-accounts">
      <description>
        A short list of accounts connected with the Mastodon platform,
        categorized into the servers there located at.
      </description>
      <default>[]</default>
    </key>
    <key type="as" name="twitter-accounts">
      <description>
        A short list of accounts connected with the Twitter platform.
      </description>
      <default>[]</default>
    </key>
    <key type="as" name="twitter-legacy-accounts">
      <description>
        A short list of accounts connected with the TwitterLegacy platform.
      </description>
      <default>[]</default>
    </key>
  </schema>
  <!-- Window Sizes -->
	<schema id="uk.co.ibboard.Cawbird.Windows" path="/uk/co/ibboard/Cawbird/Windows/">
	  <key type="(ii)" name="media-dialog-size">
	    <description>
	      The Size for the MediaDialog.
	    </description>
	    <default>(650,450)</default>
	  </key>
	</schema>
  <!-- Experimental Settings -->
	<schema id="uk.co.ibboard.Cawbird.experimental" path="/uk/co/ibboard/Cawbird/experimental/">
	  <key type="s" name="twitter-oauth-key">
	    <description>
	      A custom client key to authenticate Cawbird with Twitter.
	    </description>
	    <default>""</default>
	  </key>
	</schema>
</schemalist>
