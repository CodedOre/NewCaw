<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="cawbird">
  <!-- General settings -->
	<schema id="uk.co.ibboard.Cawbird" path="/uk/co/ibboard/Cawbird/">
    <key type="b" name="round-avatars">
      <description>
        Display user avatars round.
      </description>
      <default>true</default>
    </key>
    <key type="b" name="trailing-tags">
      <description>
        If to show tags after the text.
      </description>
      <default>false</default>
    </key>
    <key type="b" name="internal-links">
      <description>
        If to show links to media or quotes (Twitter only).
      </description>
      <default>false</default>
    </key>
	</schema>
  <!-- Window Sizes -->
	<schema id="uk.co.ibboard.Cawbird.Windows" path="/uk/co/ibboard/Cawbird/Windows/">
	  <key type="(ii)" name="media-dialog-size">
	    <description>
	      The Size for the MediaDialog.
	    </description>
	    <default>(650,450)</default>
	  </key>
	</schema>
  <!-- Debugging Settings -->
	<schema id="uk.co.ibboard.Cawbird.debug" path="/uk/co/ibboard/Cawbird/debug/">
	  <key type="s" name="twitter-oauth-key">
	    <description>
	      A custom client key to authenticate Cawbird with Twitter.
	    </description>
	    <default>""</default>
	  </key>
	</schema>
</schemalist>
