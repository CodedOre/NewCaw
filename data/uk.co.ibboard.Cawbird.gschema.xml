<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="cawbird">
  <!-- General settings -->
	<schema id="uk.co.ibboard.Cawbird" path="/uk/co/ibboard/Cawbird/">
    <!-- Display the user avatar round -->
    <key type="b" name="round-avatars">
      <default>true</default>
    </key>
	</schema>
  <!-- Experimental UI -->
	<schema id="uk.co.ibboard.Cawbird.experimental" path="/uk/co/ibboard/Cawbird/experimental/">
    <!-- Use the profile header as the header bar in ProfileDisplay. -->
	  <key type="b" name="profile-inline-header">
      <default>false</default>
    </key>
	</schema>
</schemalist>
